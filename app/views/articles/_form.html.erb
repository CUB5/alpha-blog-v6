      <%= form_with(model: @article, class:"shadow p-3 mb-4 bg-white rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %><br>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Titulo" %>
          </div>
        </div>


<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class:"shadow p-3 mb-4 bg-white rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %><br>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Titulo del artículo" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %><br>
          <div class="col-10">
            <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Descripción del artículo" %>
          </div>
        </div>

        <div class="form-group row justify-content-center mt-4">
          <%= f.submit class: "btn btn-primary"%>
        </div>
        
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to 'Volver a la lista de articulos', articles_path %>
    </div>
  </div>
</div>